            bgcolor: 1,1,1,0.4
            BoxLayout:
                orientation: 'vertical'
                CheckBox:
                    active: True
                Label:
                    text: "Wifi only"
                    color: 0,0,0,1
                    height: self.texture_size[1]
            BoxLayout:
                orientation: 'vertical'
                CheckBox:
                    active: True
                Label:
                    text: "Relay"
                    color: 0,0,0,1
                    height: self.texture_size[1]
            BoxLayout:
                orientation: 'vertical'
                CheckBox:
                    active: True
                Label:
                    text: "Download only"
                    color: 0,0,0,1
                    height: self.texture_size[1]
        BoxLayout:
            color: 1,1,1,1
