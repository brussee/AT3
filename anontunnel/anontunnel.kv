<AnonTunnelScreen>:

    log_textview: logTextView
    tunnel_togglebutton: tunnelToggleButton

    BoxLayout:
        log_textview: logTextView
        tunnel_togglebutton: tunnelToggleButton

        orientation: 'vertical'
        Image:
            size_hint: None, None
            size: root.width, root.size[1] * 0.015
            color: 1,0.2,0,1
        BoxLayout:
            size_hint: None, None
            size: root.width, root.size[1] * 0.1167
            orientation: 'horizontal'
            Image:
                size_hint: None, None
                size: root.size[0] * 0.0875, root.size[1] * 0.1167
            Image:
                size_hint: None, None
                size: root.size[0] * 0.0875, root.size[1] * 0.1167
                source: 'images/tribler_logo.png'
                mipmap: True
            Label:
                text: 'AT3'
                font_size: '28dp'
                bold: True
                color: 0,0,0,1
                size_hint: None, None
                size: root.size[0] * 0.125, root.size[1] * 0.1167
            Image:
                size_hint: None, None
                size: root.size[0] * 0.125, root.size[1] * 0.1167
            Label:
                text: 'Anon tunnel:'
                font_size: '19dp'
                color: 0,0,0,1
                size_hint: None, None
                size: root.size[0] * 0.225, root.size[1] * 0.1167
            BoxLayout:
                orientation: 'horizontal'
                Image:
                    size_hint: None, None
                    size: 23, 21
                ToggleButton:
                    id: tunnelToggleButton
                    text: 'Off'
                    group: 'g1'
                    on_release: root.toggle_anontunnel()
                Button:
                    text: 'Settings'
                    on_press: root.manager.current = 'settings'
                Image:
                    size_hint: None, None
                    size: 23, 17
            Image:
                size_hint: None, None
                size: root.size[0] * 0.02, root.size[1] * 0.1167
        Image:
            size_hint: None, None
            size: root.width, root.size[1] * 0.008
            color: 1,1,1,1
        Label:
            text: 'Log'
            size_hint: None, None
            size: root.width, root.size[1] * 0.05
            bgcolor: 0.4,0.4,0.4,1
            canvas.before:
                Color:
                    rgb: self.bgcolor
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: 1,1,1,1
        ScrollableLabel:
            size_hint: 1, 1
            bgcolor: 1,1,1,0.4
            canvas.before:
                Color:
                    rgb: self.bgcolor
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                id: logTextView
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                color: 0,0,0,1
