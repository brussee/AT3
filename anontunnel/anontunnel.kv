<AnonTunnelScreen>:

    status_text: statusText
    status_view: statusView
    circuits: circuitsLabel
    relays: relaysLabel
    enter_speed: enterSpeedLabel
    relay_speed: relaySpeedLabel
    exit_speed: exitSpeedLabel

    log_textview: logTextView
    tunnel_togglebutton: tunnelToggleButton

    BoxLayout:
        log_textview: logTextView
        tunnel_togglebutton: tunnelToggleButton

        orientation: 'vertical'
        Image:
            size_hint: None, None
            size: root.width, root.size[1] * 0.015
            color: 1,0.2,0,1
        BoxLayout:
            size_hint: None, None
            size: root.width, root.size[1] * 0.1167
            orientation: 'horizontal'
            Image:
                size_hint: None, None
                size: root.size[0] * 0.0875, root.size[1] * 0.1167
            Image:
                size_hint: None, None
                size: root.size[0] * 0.0875, root.size[1] * 0.1167
                source: 'images/tribler_logo.png'
                mipmap: True
            Label:
                text: 'AT3'
                font_size: '28dp'
                bold: True
                color: 0,0,0,1
                size_hint: None, None
                size: root.size[0] * 0.125, root.size[1] * 0.1167
            Image:
                size_hint: None, None
                size: root.size[0] * 0.125, root.size[1] * 0.1167
            Label:
                text: 'Anon tunnel:'
                font_size: '19dp'
                color: 0,0,0,1
                size_hint: None, None
                size: root.size[0] * 0.225, root.size[1] * 0.1167
            BoxLayout:
                orientation: 'horizontal'
                Image:
                    size_hint: None, None
                    size: 23, 21
                ToggleButton:
                    id: tunnelToggleButton
                    text: 'Off'
                    group: 'g1'
                    on_release: root.toggle_anontunnel()
                Button:
                    text: 'Settings'
                    on_press: root.manager.current = 'settings'
                Image:
                    size_hint: None, None
                    size: 23, 17
            Image:
                size_hint: None, None
                size: root.size[0] * 0.02, root.size[1] * 0.1167
        Image:
            size_hint: None, None
            size: root.width, root.size[1] * 0.008
            color: 1,1,1,1
        Label:
            text: 'Status'
            size_hint: None, None
            size: root.width, root.size[1] * 0.05
            bgcolor: 0.4,0.4,0.4,1
            canvas.before:
                Color:
                    rgb: self.bgcolor
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: 1,1,1,1
        BoxLayout:
            size_hint: None, None
            size: root.width, root.height * 0.3
            orientation: 'vertical'
            Label:
                id: statusText
                text: 'No anontunnels running...'
                color: 0.1,0.1,0.1,1
            BoxLayout:
                id: statusView
                opacity: 0.0
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Circuits'
                        color: 0.1,0.1,0.1,1
                    Label:
                        text: 'Relays'
                        color: 0.1,0.1,0.1,1
                    Label:
                        text: 'Enter speed'
                        color: 0.1,0.1,0.1,1
                    Label:
                        text: 'Relay speed'
                        color: 0.1,0.1,0.1,1
                    Label:
                        text: 'Exit speed'
                        color: 0.1,0.1,0.1,1
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: '0'
                        id: circuitsLabel
                        color: 0.1,0.1,0.1,1
                    Label:
                        text: '0'
                        id: relaysLabel
                        color: 0.1,0.1,0.1,1
                    Label:
                        text: '0.0 KB/s'
                        id: enterSpeedLabel
                        color: 0.1,0.1,0.1,1
                    Label:
                        text: '0.0 KB/s'
                        id: relaySpeedLabel
                        color: 0.1,0.1,0.1,1
                    Label:
                        text: '0.0 KB/s'
                        id: exitSpeedLabel
                        color: 0.1,0.1,0.1,1
                Label:
                    text: ''
        Label:
            text: 'Log'
            size_hint: None, None
            size: root.width, root.size[1] * 0.05
            bgcolor: 0.4,0.4,0.4,1
            canvas.before:
                Color:
                    rgb: self.bgcolor
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: 1,1,1,1
        ScrollableLabel:
            size_hint: 1, 1
            bgcolor: 1,1,1,0.4
            canvas.before:
                Color:
                    rgb: self.bgcolor
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                id: logTextView
                size_hint_y: None
                font_name: 'DroidSansMono.ttf'
                font_size: 14
                height: self.texture_size[1]
                text_size: self.width, None
                color: 0,0,0,1
<SettingsScreen>:

    checkbox_wifi: checkboxWifi
    checkbox_relay: checkboxRelay
    checkbox_download: checkboxDownload

    BoxLayout:

        orientation: 'vertical'
        Image:
            size_hint: None, None
            size: root.width, root.size[1] * 0.015
            color: 1,0.2,0,1
        BoxLayout:
            size_hint: None, None
            size: root.width, root.size[1] * 0.1167
            orientation: 'horizontal'
            Image:
                size_hint: None, None
                size: root.size[0] * 0.0875, root.size[1] * 0.1167
            Image:
                size_hint: None, None
                size: root.size[0] * 0.0875, root.size[1] * 0.1167
                source: 'images/tribler_logo.png'
                mipmap: True
            Label:
                text: 'AT3'
                font_size: '28dp'
                bold: True
                color: 0,0,0,1
                size_hint: None, None
                size: root.size[0] * 0.125, root.size[1] * 0.1167
            Image:
                size_hint: None, None
                size: root.size[0] * 0.125, root.size[1] * 0.1167
            Label:
                text: 'Settings'
                font_size: '19dp'
                color: 0,0,0,1
                size_hint: None, None
                size: root.size[0] * 0.225, root.size[1] * 0.1167
            BoxLayout:
                Image:
                    size_hint: None, None
                    size: 23, 21
                Button:
                    text: 'Back to main'
                    size: root.size[0] * 0.125, root.size[1] * 0.08
                    on_press: root.manager.current = 'anontunnels'
                Image:
                    size_hint: None, None
                    size: 23, 17
            Image:
                size_hint: None, None
                size: root.size[0] * 0.02, root.size[1] * 0.1167
        Image:
            size_hint: None, None
            size: root.width, root.size[1] * 0.008
            color: 1,1,1,1
        Label:
            text: 'Log'
            size_hint: None, None
            size: root.width, root.size[1] * 0.05
            bgcolor: 0.4,0.4,0.4,1
            canvas.before:
                Color:
                    rgb: self.bgcolor
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: 1,1,1,1
        BoxLayout:
            color: 1,1,1,1
        GridLayout:
            size_hint_y: None
            height: "100dp"
            cols: 3
            #size: root.width, root.size[1] * 0.8833
            #size_hint: None, None
            bgcolor: 1,1,1,0.4
            BoxLayout:
                orientation: 'vertical'
                CheckBox:
                    id: checkboxWifi
                    active: True
                Label:
                    text: "Wifi only"
                    color: 0,0,0,1
                    height: self.texture_size[1]
            BoxLayout:
                orientation: 'vertical'
                CheckBox:
                    id: checkboxRelay
                    active: True
                Label:
                    text: "Relay"
                    color: 0,0,0,1
                    height: self.texture_size[1]
            BoxLayout:
                orientation: 'vertical'
                CheckBox:
                    id: checkboxDownload
                    active: True
                Label:
                    text: "Download only"
                    color: 0,0,0,1
                    height: self.texture_size[1]
        BoxLayout:
            color: 1,1,1,1
